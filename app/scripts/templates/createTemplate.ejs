<div id="create-page">
    <div class="edit-wrapper">
        <div class="image-wrapper">

            <div class="image-gallery-wrapper">
                <div class="image-gallery">
                    <%for(var i = 0; i < 4; i++){
                        var text, header;
                        switch (i){
                            case 0:
                                header = "Home Thumbnail";
                                text = "380px * 220px"
                                break;

                            case 1:
                                header = "Detail Thumbnail";
                                text = "120px * 70px";
                                break;

                            case 2:
                                header = "Detail Gallery";
                                text = "515px * 300px";
                                break;

                            case 3:
                                header = "List Thumbnail";
                                text = "840px * 200px";
                                break;
                        }
                    %>
                    <div class="content-image">
                        <h2><%= header %></h2>

                        <div class="image" id="backgroundImg<%=i%>">
                            <img class="src" src="images/detail-gallery-null.jpg" alt=""  id="backgroundImageTag" />
                        </div>

                        <p>
                            <%= text %> is recommended.
                        </p>

                        <div class="form-group">
                            <input type="file" id="backgroundInputFile">
                        </div>
                    </div>
                    <% } %>
                </div>
            </div>

            <div class="image-nav">
                <ul>
                    <li class="selected"></li>
                    <li></li>
                    <li></li>
                    <li></li>
                </ul>
            </div>

        </div>

        <div class="content-wrapper">

            <div class="element element-name">
                <div class="form-group form-name">
                    <label for="inputName">Project Name</label>
                    <input type="name" class="form-control" id="inputNameEdit" placeholder="Project Name">
                </div>
            </div>

            <div class="element element-type">
                <ul class="type-list">
                    <li>MAIN</li>
                    <li>SUB</li>
                    <li>SMALL</li>
                </ul>
            </div>

            <div class="element element-hours">
                <div class="form-group form-name">
                    <label for="inputHour">Hours:</label>
                    <input type="Hours" class="form-control" id="inputHour" placeholder="Hours">
                </div>
            </div>


            <div class="element element-cal">
                <div class="form-group form-schedule">
                    <label for="input-schedule-start" >Schedule:</label>
                    <input type="text" id="edit-start-date" class="form-control" placeholder="ScheduleStart"/>
                    <input type="text" id="edit-end-date" class="form-control" placeholder="SceduleEnd"/>
                </div>
            </div>


            <div class="element element-brief">
                <div class="form-group form-name">
                    <label for="inputBrief">Breif:</label>
                    <textarea class="form-control" elements="2" id="edit-input-brief"></textarea>
                </div>
            </div>


            <div class="element element-content">
                <div class="form-group form-name">
                    <label for="inputfContent">Content:</label>
                    <textarea class="form-control" elements="6" id="edit-input-content"></textarea>
                </div>
            </div>

            <div class="element edit-bt">
                <div class="create-bt">CREATE</div>
            </div>


        </div>
    </div>
</div>